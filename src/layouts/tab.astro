---
import '@/main.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="@scripts/tb"></script>
  </head>
  <body class="text-white font-sans p-4 bg-gray-900">
    <div class="w-full">
      <div
        id="tab-wrapper"
        class="h-14 flex items-center bg-background-overlay rounded-t-lg p-2 relative transition-all"
      >
        <div id="tcontainer" class="flex flex-nowrap overflow-x-auto space-x-2 ml-2 max-w-full">
        </div>
        <button
          id="add"
          class="ml-2 mt-[2px] flex items-center justify-center w-8 h-8 text-lg rounded-md text-gray-400 hover:text-white hover:bg-gray-700 transition-colors"
        >
          +
        </button>
      </div>

      <div
        class="border-border-default flex items-center bg-background-overlay h-12 transition-all px-6"
      >
        <div class="flex items-center space-x-4">
          <button
            id="back"
            class="flex items-center justify-center w-8 h-8 text-lg rounded-md text-gray-400 hover:text-white hover:bg-gray-700 transition-colors"
          >
            <img src="/a/images/logo/left-arr.svg" class="w-4 h-4" />
          </button>
          <button
            id="forward"
            class="flex items-center justify-center w-8 h-8 text-lg rounded-md text-gray-400 hover:text-white hover:bg-gray-700 transition-colors"
          >
            <img src="/a/images/logo/right-arr.svg" class="w-4 h-4" />
          </button>
          <button
            id="refresh"
            class="group flex items-center justify-center w-8 h-8 text-lg rounded-md text-gray-400 hover:text-white hover:bg-gray-700 transition-colors"
          >
            <img
              src="/a/images/logo/refresh.svg"
              class="w-4 h-4 transition-transform duration-500 group-hover:animate-spin"
            />
          </button>
        </div>
        <div class="flex grow items-center justify-between ml-8">
          <input
            type="text"
            id="urlbar"
            class="font-linux w-full px-4 py-2 h-10 bg-[#1c1a2b] text-text-secondary border-t-2 rounded-full text-sm font-semibold transition-all duration-300 ease-in-out focus:outline-none focus:ring-0"
            placeholder="Enter a URL or a query..."
          />
        </div>
      </div>
    </div>

    <div id="fcontainer" class="w-full h-[calc(100vh-4rem)] rounded-b-lg overflow-hidden"></div>
  </body>
</html>

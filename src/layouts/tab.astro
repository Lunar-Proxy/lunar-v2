---
import ImportLucide from './lucide.astro';
import "@/main.css"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="@scripts/tb.ts"></script>
    <script src="@scripts/menu.ts"></script>
    <script src="@scripts/suggestions.ts"></script>
  </head>
  <body class="bg-gray-900 p-4 font-sans text-white">
    <div class="w-full">
      <div
        id="tab-wrapper"
        class="relative isolate flex h-14 items-end overflow-hidden rounded-t-2xl bg-[#1c1a2b] px-2">
        <div class="flex w-full items-center space-x-2">
          <div id="tcontainer" class="flex max-w-full flex-nowrap space-x-2 overflow-x-auto"></div>
          <button
            id="add"
            class="relative -top-1/2 flex h-8 w-8 items-center justify-center rounded-md text-gray-400 hover:bg-gray-700 hover:text-white">
            <i data-lucide="plus" class="h-4 w-4"></i>
          </button>
        </div>
      </div>
      <div class="flex h-12 items-center border-t border-[#3a3758] bg-[#1c1a2b] px-4">
        <div class="flex w-auto items-center space-x-2">
          <button
            id="back"
            class="flex h-8 w-8 items-center justify-center rounded-md text-gray-400 hover:bg-gray-700 hover:text-white">
            <i data-lucide="arrow-left" class="h-4 w-4"></i>
          </button>
          <button
            id="forward"
            class="flex h-8 w-8 items-center justify-center rounded-md text-gray-400 hover:bg-gray-700 hover:text-white">
            <i data-lucide="arrow-right" class="h-4 w-4"></i>
          </button>
          <button
            id="refresh"
            class="group flex h-8 w-8 items-center justify-center rounded-md text-gray-400 hover:bg-gray-700 hover:text-white">
            <i data-lucide="refresh-cw" class="h-4 w-4 transition-transform duration-500 group-hover:animate-spin"></i>
          </button>
          <button
            id="home"
            class="flex h-8 w-8 items-center justify-center rounded-md text-gray-400 hover:bg-gray-700 hover:text-white">
            <i data-lucide="house" class="h-4 w-4"></i>
          </button>
          </div>
          <div class="relative ml-4 flex w-auto grow flex-col">
            <div class="relative w-full">
              <div class="absolute top-1/2 left-3 z-20 flex -translate-y-1/2 items-center gap-2">
                <span class="flex items-center">
                  <i data-lucide="lock" class="h-4 w-4 text-green-500"></i>
                </span>
                <button
                  id="search-engine-btn"
                  class="flex items-center gap-1 rounded px-1 py-1 transition-colors hover:bg-[#23213a] focus:bg-[#23213a]">
                  <img id="search-engine-icon" src="/a/images/engines/ddg.ico" alt="DuckDuckGo" class="h-4 w-4" />
                  <i data-lucide="chevron-down" class="h-3 w-3 text-gray-400 transition-transform duration-200"></i>
                </button>
              </div>
              <div
                id="search-engine-dropdown"
                class="absolute top-full left-3 z-[100] mt-1 hidden w-48 overflow-hidden rounded-lg border border-[#3a3758] bg-[#1f1f30] shadow-2xl">
              <div class="flex flex-col py-1">
                <button class="search-engine-option flex items-center gap-3 px-3 py-2 text-sm text-gray-200 transition hover:bg-[#2a293f]" data-engine="duckduckgo">
                  <img src="/a/images/engines/ddg.ico" alt="DuckDuckGo" class="h-5 w-5" />
                  <span>DuckDuckGo</span>
                </button>
                <button class="search-engine-option flex items-center gap-3 px-3 py-2 text-sm text-gray-200 transition hover:bg-[#2a293f]" data-engine="google">
                  <img src="/a/images/co/go.ico" alt="Google" class="h-5 w-5" />
                  <span>Google</span>
                </button>
                <button class="search-engine-option flex items-center gap-3 px-3 py-2 text-sm text-gray-200 transition hover:bg-[#2a293f]" data-engine="bing">
                  <img src="/a/images/engines/bi.ico" alt="Bing" class="h-5 w-5" />
                  <span>Bing</span>
                </button>
                <button class="search-engine-option flex items-center gap-3 px-3 py-2 text-sm text-gray-200 transition hover:bg-[#2a293f]" data-engine="brave">
                  <img src="/a/images/engines/br.jpeg" alt="Brave Search" class="h-5 w-5" />
                  <span>Brave Search</span>
                </button>
              </div>
            </div>
            <input
              type="text"
              id="urlbar"
              class="font-linux h-9 w-full rounded-full border border-[#3a3758] bg-[#23213a] pr-12 pl-20 text-[15px] font-normal text-gray-200 transition-colors hover:text-white focus:ring-0 focus:outline-none shadow-sm"
              placeholder="Search or enter address"
            />
            <button
              id="fav"
              class="absolute top-1/2 right-2 flex h-8 w-8 -translate-y-1/2 items-center justify-center rounded-full text-gray-400 transition-all duration-300 ease-[cubic-bezier(0.25,1,0.5,1)] hover:scale-125 hover:text-yellow-400 hover:drop-shadow-[0_0_8px_rgba(255,255,0,0.6)] focus:outline-none active:scale-150 active:drop-shadow-[0_0_12px_rgba(255,255,0,0.9)]">
              <i data-lucide="star" class="h-4 w-4 transition-transform duration-300 ease-out"></i>
            </button>
            <div
              id="loading-bar"
              class="pointer-events-none fixed right-0 left-0"
              style="height:3px;background:#5c59a5;border-radius:9999px;transition:all 0.2s;opacity:0;display:none;width:100vw;z-index:50;">
            </div>
          </div>
        </div>
        <button
          id="menubtn"
          class="z-[110] ml-4 flex h-8 w-8 items-center justify-center rounded-md text-gray-400 transition hover:bg-gray-700 hover:text-white">
          <i data-lucide="menu" class="h-5 w-5"></i>
        </button>
      </div>

      <div class="relative">
        <div
          id="menu"
          class="font-linux absolute top-full right-0 z-[1000] mt-2 hidden w-64 overflow-hidden rounded-2xl border border-[#3a3758] bg-[#1f1f30] font-medium shadow-2xl backdrop-blur-md">
          <div class="flex flex-col">
            <button
              class="menu-item flex w-full items-center justify-start gap-3 px-4 py-2.5 text-gray-200 transition hover:bg-[#2a293f] hover:text-white">
              <i data-lucide="plus" class="h-5 w-5 flex-shrink-0"></i>
              <span class="text-sm leading-5">New Tab</span>
            </button>

            <button
              class="menu-item flex w-full items-center justify-start gap-3 px-4 py-2.5 text-gray-200 transition hover:bg-[#2a293f] hover:text-white">
              <i data-lucide="maximize-2" class="h-5 w-5 flex-shrink-0"></i>
              <span class="text-sm leading-5">Full Screen</span>
            </button>

            <button
              class="menu-item flex w-full items-center justify-start gap-3 px-4 py-2.5 text-gray-200 transition hover:bg-[#2a293f] hover:text-white">
              <i data-lucide="refresh-cw" class="h-5 w-5 flex-shrink-0"></i>
              <span class="text-sm leading-5">Reload</span>
            </button>
          </div>
          <div class="flex flex-col">
            <button
              class="menu-item flex w-full items-center justify-start gap-3 px-4 py-2.5 text-gray-200 transition hover:bg-[#2a293f] hover:text-white">
              <i data-lucide="code" class="h-5 w-5 flex-shrink-0"></i>
              <span class="text-sm leading-5">Inspect Element</span>
            </button>
            <button
              class="menu-item flex w-full items-center justify-start gap-3 px-4 py-2.5 text-gray-200 transition hover:bg-[#2a293f] hover:text-white">
              <i data-lucide="hat-glasses" class="h-5 w-5 flex-shrink-0"></i>
              <span class="text-sm leading-5">AB Cloak</span>
            </button>
            <button
              class="menu-item flex w-full items-center justify-start gap-3 px-4 py-2.5 text-gray-200 transition hover:bg-[#2a293f] hover:text-white">
              <i data-lucide="log-out" class="h-5 w-5 flex-shrink-0"></i>
              <span class="text-sm leading-5">Panic</span>
            </button>
          </div>
          <div class="flex flex-col">
            <button
              class="menu-item flex w-full items-center justify-start gap-3 px-4 py-2.5 text-gray-200 transition hover:bg-[#2a293f] hover:text-white">
              <i data-lucide="settings" class="h-5 w-5 flex-shrink-0"></i>
              <span class="text-sm leading-5">Settings</span>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div id="fcontainer" class="absolute top-[6.4rem] right-0 bottom-0 left-0 w-full overflow-hidden rounded-b-lg">
    </div>
    <ImportLucide />
  </body>
</html>
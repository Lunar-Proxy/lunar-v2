<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="@/utils/tb"></script>
  </head>
  <body class="text-white font-sans p-4 bg-gray-900">
    <div class="w-full">
      <div
        id="tab-wrapper"
        class="h-14 flex items-center bg-background-overlay rounded-t-lg p-2 relative transition-all"
      >
        <div id="tcontainer" class="flex flex-nowrap overflow-x-auto space-x-2 ml-2 max-w-full">
        </div>
        <button
          id="add"
          class="ml-2 flex items-center justify-center w-8 h-8 text-lg rounded-md text-gray-400 hover:text-white hover:bg-gray-700 transition-colors"
        >
          +
        </button>
      </div>
      <div class="flex justify-center bg-background-overlay h-12 transition-all">
        <input
          type="text"
          class="w-1/3 p-2 h-10 bg-gray-800 text-white border-t-0 border-l-0 border-r-0 border-b-2 border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 text-sm transition-all duration-300 ease-in-out"
          placeholder="Enter a URL or a query..."
        />
      </div>
    </div>

    <div id="fcontainer" class="w-full h-[calc(100vh-4rem)] rounded-b-lg overflow-hidden"></div>
  </body>
</html>
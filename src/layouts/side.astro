---
import '@/main.css';
---

<aside
  class="top-0 left-0 z-50 flex h-[100dvh] w-[54px] flex-col items-center overflow-visible rounded-r-md bg-[#1c1a2b] shadow-xl">
  <div class="group relative mt-3 mb-4">
    <button
      data-url="/"
      class="flex h-10 w-10 items-center justify-center rounded-lg bg-[#29263c] transition-all duration-300 ease-out hover:scale-110 hover:rotate-3 hover:shadow-lg active:scale-95">
      <img
        src="/a/moon.svg"
        class="h-6 w-6 object-contain transition-transform duration-300 group-hover:scale-110"
        alt="Logo"
      />
    </button>
    <span
      class="tooltip pointer-events-none absolute top-1/2 left-full ml-2 -translate-y-1/2 transform-none rounded-lg bg-[#29263c] px-3 py-1 text-sm whitespace-nowrap text-[#aab0d0] opacity-0 shadow-lg transition-all duration-300 ease-out group-hover:translate-x-1 group-hover:text-[#d0d6f9] group-hover:opacity-100">
      Home
    </span>
  </div>

  <div class="flex flex-1 flex-col items-center justify-center gap-4">
    <div class="group relative">
      <button
        data-url="/math"
        class="flex h-10 w-10 items-center justify-center rounded-lg bg-[#29263c] transition-all duration-300 ease-out hover:scale-110 hover:rotate-3 hover:shadow-lg active:scale-95">
        <i
          data-lucide="gamepad"
          class="h-6 w-6 text-[#aab0d0] transition-transform duration-300 group-hover:scale-110 group-hover:text-[#d0d6f9]"
        ></i>
      </button>
      <span
        class="tooltip pointer-events-none absolute top-1/2 left-full ml-2 -translate-y-1/2 transform-none rounded-lg bg-[#29263c] px-3 py-1 text-sm whitespace-nowrap text-[#aab0d0] opacity-0 shadow-lg transition-all duration-300 ease-out group-hover:translate-x-1 group-hover:text-[#d0d6f9] group-hover:opacity-100">
        Games
      </span>
    </div>

    <div class="group relative">
      <button
        data-url="/sci"
        class="flex h-10 w-10 items-center justify-center rounded-lg bg-[#29263c] transition-all duration-300 ease-out hover:scale-110 hover:rotate-3 hover:shadow-lg active:scale-95">
        <i
          data-lucide="grip"
          class="h-6 w-6 text-[#aab0d0] transition-transform duration-300 group-hover:scale-110 group-hover:text-[#d0d6f9]"
        ></i>
      </button>
      <span
        class="tooltip pointer-events-none absolute top-1/2 left-full ml-2 -translate-y-1/2 transform-none rounded-lg bg-[#29263c] px-3 py-1 text-sm whitespace-nowrap text-[#aab0d0] opacity-0 shadow-lg transition-all duration-300 ease-out group-hover:translate-x-1 group-hover:text-[#d0d6f9] group-hover:opacity-100">
        Apps
      </span>
    </div>
  </div>

  <div class="mb-4 flex flex-col items-center gap-3">
    <div class="group relative">
      <button
        data-url="/st"
        class="flex h-10 w-10 items-center justify-center rounded-lg bg-[#29263c] transition-all duration-300 ease-out hover:scale-110 hover:rotate-3 hover:shadow-lg active:scale-95">
        <i
          data-lucide="settings"
          class="h-6 w-6 text-[#aab0d0] transition-transform duration-300 group-hover:scale-110 group-hover:text-[#d0d6f9]"
        ></i>
      </button>
      <span
        class="tooltip pointer-events-none absolute top-1/2 left-full ml-2 -translate-y-1/2 transform-none rounded-lg bg-[#29263c] px-3 py-1 text-sm whitespace-nowrap text-[#aab0d0] opacity-0 shadow-lg transition-all duration-300 ease-out group-hover:translate-x-1 group-hover:text-[#d0d6f9] group-hover:opacity-100">
        Settings
      </span>
    </div>
  </div>
</aside>

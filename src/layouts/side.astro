---
import '@/main.css';
---
<aside
  class="fixed top-0 bottom-0 left-0 z-50 flex h-full w-[66px] flex-col items-center rounded-md bg-[#1a1b26] shadow-xl overflow-hidden">
  <img src="path/to/your/image.png" 
       class="mb-4 mt-3 w-12 h-12 rounded-xl object-contain hover:scale-110 transition-transform duration-300" />
  <div class="flex flex-1 flex-col gap-4 items-center justify-center">
    <a>
      <button
        class="group relative flex h-10 w-10 items-center justify-center rounded-lg bg-[#313244] transition-all duration-300 ease-out hover:scale-110 hover:rotate-4 hover:shadow-xl">
        <i data-lucide="gamepad" class="h-6 w-6 transition-transform duration-300 group-hover:scale-110"></i>
        <span
          class="absolute left-full top-1/2 ml-2 -translate-y-1/2 scale-90 rounded-lg bg-[#313244] px-3 py-1 text-sm text-white opacity-0 shadow-lg transition-all duration-300 ease-out group-hover:scale-100 group-hover:opacity-100">
          Games
        </span>
      </button>
    </a>
  </div>
  <div class="mb-4 flex flex-col gap-3 items-center">
    <a>
      <button
        class="group relative flex h-10 w-10 items-center justify-center rounded-lg bg-[#292a36] transition-all duration-300 ease-out hover:scale-110 hover:rotate-4 hover:shadow-xl">
        <i data-lucide="settings" class="h-6 w-6 transition-transform duration-300 group-hover:scale-110"></i>
        <span
          class="absolute left-full top-1/2 ml-2 -translate-y-1/2 scale-90 rounded-lg bg-[#292a36] px-3 py-1 text-sm text-white opacity-0 shadow-lg transition-all duration-300 ease-out group-hover:scale-100 group-hover:opacity-100">
          Settings
        </span>
      </button>
    </a>
  </div>
</aside>
<script>
  const frameNavigator = document.querySelector('iframe') as HTMLIFrameElement | null;
  const Navigation = [
    { btn: 'Home', url: '/welcome' },
    { btn: 'Games', url: '/ga' },
    { btn: 'Settings', url: '/st' },
  ];

  Navigation.forEach(({ btn, url }) => {
    const button =
      Array.from(document.querySelectorAll('span'))
        .find(el => el.textContent?.trim() === btn)
        ?.previousElementSibling?.querySelector('button') || null;

    if (button) {
      button!.addEventListener('click', () => {
        const input = window.parent.document.getElementById('urlbar') as HTMLInputElement | null;
        if (input) {
          input.value = url;
          input.dispatchEvent(new KeyboardEvent('keydown', { key: 'Enter' }));
        }
      });
    }
  });
</script>

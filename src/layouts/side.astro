---
import '@/main.css';
---

<div class="group/sidebar fixed inset-y-0 left-0 z-50 flex items-center">
  <div
    class="fixed top-1/2 left-0 z-60 -translate-y-1/2 cursor-pointer transition-opacity duration-300 ease-in-out group-hover/sidebar:opacity-0"
    style="height: calc(100% - 88px); max-height: 400px; width: 24px;">
    <div
      class="absolute top-1/2 left-0 h-20 w-[6px] -translate-y-1/2 rounded-r-md bg-gradient-to-b from-[#6b63ff] to-[#3e3b70] opacity-40">
    </div>
  </div>
  <aside
    class="fixed top-1/2 left-8 z-50 mt-11 flex -translate-x-[120%] -translate-y-1/2 transform flex-col items-center rounded-[2rem] border border-[#2a2740]/60 bg-[#1f1d2e]/95 p-3 shadow-[0_12px_28px_rgba(0,0,0,0.5)] backdrop-blur-md transition-transform duration-300 ease-in-out group-hover/sidebar:-translate-x-[30%]">
    <div class="group relative my-2">
      <button
        data-url="/"
        class="flex h-12 w-12 transform items-center justify-center rounded-full bg-gradient-to-b from-[#2b2940] to-[#23212d] shadow-md transition-transform duration-200 ease-in-out hover:-translate-y-1 hover:shadow-2xl focus:ring-2 focus:ring-indigo-500/30 focus:outline-none active:translate-y-0">
        <img src="/a/moon.svg" alt="Logo" class="h-6 w-6 object-contain transition-transform duration-300" />
      </button>
      <span
        class="font-linux pointer-events-none absolute top-1/2 left-full ml-3 -translate-y-1/2 rounded-md bg-[#28263e] px-3 py-1 text-sm whitespace-nowrap text-[#b8bfd9] opacity-0 shadow-md transition-all duration-300 group-hover:translate-x-2 group-hover:opacity-100">
        Home
      </span>
    </div>
    <div class="my-2.5 flex flex-col items-center justify-center gap-3">
      <div class="group relative">
        <button
          data-url="/math"
          class="flex h-12 w-12 transform items-center justify-center rounded-full bg-gradient-to-b from-[#2b2940] to-[#23212d] shadow-md transition-transform duration-200 ease-in-out hover:-translate-y-1 hover:shadow-lg focus:ring-2 focus:ring-indigo-500/20 focus:outline-none active:translate-y-0">
          <i
            data-lucide="gamepad"
            class="h-5 w-5 text-[#c4c9e6] drop-shadow-sm transition-transform duration-200 ease-in-out group-hover:scale-105 group-hover:text-[#e6e9ff]"
          ></i>
        </button>
        <span
          class="font-linux pointer-events-none absolute top-1/2 left-full ml-3 -translate-y-1/2 rounded-md bg-[#28263e] px-3 py-1 text-sm whitespace-nowrap text-[#b8bfd9] opacity-0 shadow-md transition-all duration-300 group-hover:translate-x-2 group-hover:opacity-100">
          Games
        </span>
      </div>
      <div class="group relative">
        <button
          data-url="/sci"
          class="flex h-12 w-12 transform items-center justify-center rounded-full bg-gradient-to-b from-[#2b2940] to-[#23212d] shadow-md transition-transform duration-200 ease-in-out hover:-translate-y-1 hover:shadow-lg focus:ring-2 focus:ring-indigo-500/20 focus:outline-none active:translate-y-0">
          <i
            data-lucide="grip"
            class="h-5 w-5 text-[#c4c9e6] drop-shadow-sm transition-transform duration-200 ease-in-out group-hover:scale-105 group-hover:text-[#e6e9ff]"
          ></i>
        </button>
        <span
          class="font-linux pointer-events-none absolute top-1/2 left-full ml-3 -translate-y-1/2 rounded-md bg-[#28263e] px-3 py-1 text-sm whitespace-nowrap text-[#b8bfd9] opacity-0 shadow-md transition-all duration-300 group-hover:translate-x-2 group-hover:opacity-100">
          Apps
        </span>
      </div>
    </div>
    <div class="group relative my-2">
      <button
        data-url="/st"
        class="flex h-12 w-12 transform items-center justify-center rounded-full bg-gradient-to-b from-[#2b2940] to-[#23212d] shadow-md transition-transform duration-200 ease-in-out hover:-translate-y-1 hover:shadow-lg focus:ring-2 focus:ring-indigo-500/20 focus:outline-none active:translate-y-0">
        <i
          data-lucide="settings"
          class="h-5 w-5 text-[#c4c9e6] drop-shadow-sm transition-transform duration-200 ease-in-out group-hover:scale-105 group-hover:rotate-180 group-hover:text-[#e6e9ff]"
        ></i>
      </button>
      <span
        class="font-linux pointer-events-none absolute top-1/2 left-full ml-3 -translate-y-1/2 rounded-md bg-[#28263e] px-3 py-1 text-sm whitespace-nowrap text-[#b8bfd9] opacity-0 shadow-md transition-opacity transition-transform duration-200 ease-in-out group-hover:translate-x-2 group-hover:opacity-100">
        Settings
      </span>
    </div>
  </aside>
</div>

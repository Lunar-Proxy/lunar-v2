---
import { Search } from 'lucide-astro';
import '@/main.css';
---
<!doctype html>
<html lang="en" class="h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Home - Google Drive</title>
    <script src="@/utils/index.ts"></script>
    <link rel="shortcut icon" href="favicon.ico" />
  </head>
  <body class="flex items-center justify-center min-h-screen">
    <div
      class="flex flex-col items-center text-center px-4 space-y-12 max-w-lg w-full"
    >
      <h1 class="text-5xl font-extrabold tracking-tight text-text-HEADER">
        Welcome to <span class="text-blue-500">Lunar</span>
      </h1>
      <p class="font-semibold text-lg text-text-SECONDARY">Cats go meow, crazy right.</p>
      <div class="relative w-full">
        <form method="post" id="startForm" class="flex justify-center">
          <input
            class="w-full pl-12 pr-6 py-4 text-xl text-text-SECONDARY bg-background-overlay border border-gray-700 rounded-lg shadow-lg focus:outline-none focus:ring-4 focus:ring-blue-500 focus:border-transparent transition duration-300"
            type="text"
            placeholder="Search something..."
          />
          <Search
            class="hover:text-text-HEADER absolute left-4 top-1/2 transform -translate-y-1/2 transition duration-300 text-gray-400"
          />
        </form>
      </div>
    </div>
  </body>
</html>

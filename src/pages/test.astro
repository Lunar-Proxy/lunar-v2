---
import '@/main.css';
---

<link href="/@lb/picker.css" rel="stylesheet" />
<script is:inline src="/@lb/picker.js"></script>

<div class="mt-8 max-w-md mx-auto bg-background-overlay rounded-xl p-6 shadow-lg">
  <p class="text-2xl font-semibold text-text-HEADER mb-4">Color Picker Test:</p>
  <input
    type="text"
    data-coloris
    class="w-full bg-transparent border-2 border-border rounded-lg p-4 text-lg text-text-secondary focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all ease-in-out duration-200"
  />
</div>

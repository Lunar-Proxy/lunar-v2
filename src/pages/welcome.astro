---
import '@/main.css';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Google Docs</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body class="min-h-screen bg-[#0B0F19] flex items-center justify-center px-6 py-16 text-white font-sans">
    <div class="flex flex-col items-center gap-10 w-full max-w-6xl">
      <h1 class="text-6xl sm:text-7xl md:text-8xl font-linux font-extrabold tracking-tight text-center drop-shadow-[0_0_12px_#3b82f6] text-text-HEADER">
        Lunar
      </h1>

      <p class="text-text-SECONDARY text-base sm:text-lg md:text-xl font-mono font-medium text-center min-h-[2.5rem] opacity-80 transition-opacity duration-500 ease-in-out">
        -
      </p>

      <div class="flex flex-wrap justify-center gap-4 sm:gap-6 mt-4">
        <button
          class="px-5 py-3 text-base sm:text-lg font-semibold rounded-xl border border-blue-500/30 bg-[#111827] text-white shadow-md hover:shadow-blue-400/20 transition-all duration-300 ease-in-out transform hover:-translate-y-1 hover:border-blue-400 focus:outline-none backdrop-blur-sm"
          onclick="top?.document.dispatchEvent(new KeyboardEvent('keydown', { key: 'z', ctrlKey: true, bubbles: true }));"
        >
          AB Cloak
        </button>

        <button
          onclick="location.href = './browse'"
          class="px-5 py-3 text-base sm:text-lg font-semibold rounded-xl border border-purple-500/30 bg-[#111827] text-white shadow-md hover:shadow-purple-400/20 transition-all duration-300 ease-in-out transform hover:-translate-y-1 hover:border-purple-400 focus:outline-none backdrop-blur-sm"
        >
          Search Freely
        </button>
      </div>

      <div id="updates" class="w-full flex justify-center animate-fade-in pt-10">
        <div class="flex items-start gap-4 p-6 rounded-2xl bg-[#111827] shadow-xl border border-blue-900 w-full max-w-2xl transform transition-transform hover:scale-[1.02] hover:shadow-blue-700/50 backdrop-blur-md">
          <div class="text-blue-400 mt-1 shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M12 2a10 10 0 100 20 10 10 0 000-20z" />
            </svg>
          </div>
          <div>
            <h3 class="font-linux font-semibold text-white text-xl">Latest Update: V1 Release</h3>
            <p class="mt-2 text-gray-300 text-md leading-relaxed whitespace-pre-wrap">
              Added:
              - PlaceHolder text
            </p>
          </div>
        </div>
      </div>
    </div>

    <script>
      (async () => {
        try {
          const res = await fetch('/a/json/msg.json');
          const data = await res.json();
          if (Array.isArray(data) && data.length > 0) {
            const index = Math.floor(Math.random() * data.length);
            const msgElement = document.querySelector('p');
            if (msgElement) {
              msgElement.style.opacity = '0';
              setTimeout(() => {
                msgElement.innerText = data[index].message;
                msgElement.style.opacity = '1';
              }, 300);
            }
          }
        } catch (error) {
          console.error('Failed to fetch quote:', error);
        }
      })();
    </script>
  </body>
</html>

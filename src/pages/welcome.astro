---
import '@/main.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Google Docs</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body class="min-h-screen flex items-center justify-center px-6 py-12">
    <div class="flex flex-col items-center space-y-10 w-full max-w-4xl">
      <h1 class="text-text-HEADER text-8xl font-linux font-semibold text-center">Lunar</h1>
      <p class="text-text-SECONDARY text-2xl font-mono font-semibold text-center min-h-[2.5rem]"></p>
      <div class="flex justify-center items-center gap-6 mt-4 flex-wrap">
        <button onclick="" class="px-6 py-3 bg-[#111827] text-white font-semibold rounded-xl shadow-lg hover:shadow-blue-500/40 hover:-translate-y-1 transition-all duration-300 ease-in-out">
          AB Cloak
        </button>
        <button onclick="location.href = './browse'" class=" px-6 py-3 bg-[#111827] text-white font-semibold rounded-xl shadow-lg hover:shadow-purple-500/40 hover:-translate-y-1 transition-all duration-300 ease-in-out">
          Search Freely
        </button>
      </div>

      <div id="updates" class="w-full flex justify-center animate-fade-in pt-6">
        <div class="flex items-start gap-4 p-6 rounded-xl bg-[#111827] shadow-lg border border-blue-800 w-full max-w-2xl transition-all duration-500 transform hover:scale-[1.02] hover:shadow-blue-700/50">
          <div class="text-blue-400 mt-1 shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M12 2a10 10 0 100 20 10 10 0 000-20z" />
            </svg>
          </div>
          <div>
            <h3 class="font-linux font-semibold text-white text-xl">Latest Update: V1 Release</h3>
            <p class="mt-3 text-gray-300 text-sm leading-relaxed">
              PlaceHolder :)
            </p>
          </div>
        </div>
      </div>
    </div>
  </body>

  <script>
    (async () => {
      try {
        const res = await fetch('/a/json/msg.json');
        const data = await res.json();
        if (Array.isArray(data) && data.length > 0) {
          const index = Math.floor(Math.random() * data.length);
          document.querySelector('p')!.innerText = data[index].message;
        }
      } catch (error) {
        console.error('Failed to fetch quote:', error);
      }
    })();
  </script>
</html>

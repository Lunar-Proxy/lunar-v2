---
import '@/main.css';

const error = Astro.url.searchParams.get('error') || '';
const url = Astro.url.searchParams.get('url') || '';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Page Not Found</title>
  </head>
  <body class="bg-background font-linux text-text-header flex min-h-screen w-screen items-center justify-center">
    <div class="flex h-full w-full flex-col items-center px-4 py-12">
      <div class="mb-12 flex w-full flex-col items-center">
        <div class="mb-4 text-9xl font-extrabold drop-shadow-lg">404</div>
        <div class="mb-2 text-3xl font-bold">Page Not Found</div>
        <div class="text-text-secondary mb-6 max-w-2xl text-center text-lg">
          The page you requested could not be found.
        </div>
      </div>

      <div class="mb-10 flex w-full flex-wrap items-center justify-center gap-4">
        <button
          class="bg-background-overlay border-border-default hover:bg-border-default rounded-lg border px-7 py-3 text-lg font-semibold whitespace-nowrap transition hover:text-white"
          onclick="window.location.reload()">Reload</button
        >
        <button
          class="bg-background-overlay border-border-default hover:bg-border-default rounded-lg border px-7 py-3 text-lg font-semibold whitespace-nowrap transition hover:text-white"
          onclick="window.location.href='/'">Go Home</button
        >
      </div>

      <div class="flex w-full max-w-4xl flex-col items-start justify-center gap-16 md:flex-row">
        <div class="max-w-xl min-w-[260px] flex-1">
          <div class="mb-2 text-lg font-semibold">URL</div>
          <div
            class="bg-background-overlay border-border-default text-text-secondary mb-6 rounded-md border px-4 py-3 font-mono text-base break-all">
            {url || 'Unknown'}
          </div>
          <div class="mb-2 text-lg font-semibold">Error Details</div>
          <textarea
            readonly
            placeholder="No error details provided"
            class="bg-background-overlay border-border-default mb-6 min-h-[80px] w-full resize-y rounded-md border p-3 font-mono text-base"
            >{error}</textarea
          >
        </div>
        <div class="max-w-xl min-w-[260px] flex-1">
          <div class="mb-2 text-lg font-semibold">Possible reasons:</div>
          <ul class="text-text-secondary ml-6 list-disc text-base">
            <li>The address was mistyped or the page no longer exists.</li>
            <li>The wisp server is blocked or broken.</li>
            <li>There was a network or proxy error.</li>
            <li>If you see a stack trace, the app or site may have crashed.</li>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
